{% extends 'admin/layout.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <h1>Newsletter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ newsletter.email }}</td>
            </tr>
            <tr>
                <th>Subscribed</th>
                <td>{{ newsletter.subscribed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ newsletter.id }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_newsletter_index') }}">back to list</a>

    <a href="{{ path('admin_newsletter_edit', {'id': newsletter.id}) }}">edit</a>

    {{ include('admin/newsletter/_delete_form.html.twig') }}
{% endblock %}
